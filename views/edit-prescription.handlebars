        <div>
            <button type='submit' id='update-rx-btn' class='form-control rx-buttons'>Update RX</button>
            <button type='click' id='delete-rx-btn' class='form-control rx-buttons'>Delete
                RX</button>
            <div id='liveAlertPlaceholder' class='emptyDate-alert'></div>
            <div id="liveAlertPlaceholder" class="date-alert"></div>
            <button
                type='click'
                id='notification-btn'
                class='form-control rx-buttons'
            >Click here to get a refill notification!</button>
            <div id="liveAlertPlaceholder" class="twilio-alert"></div>
        </div>
    </form>
</section>

