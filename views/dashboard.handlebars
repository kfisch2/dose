    <div class="col">
        {{#if prescriptions.length}}
        <div class="prescriptions-list ">
            <h2 class="edit-rx-h2" >Your Prescriptions</h2>
            <div class="list-container">
                <ol id="my-list ">
                    {{#each prescriptions as |prescription|}}
                    <ul class="rx-list content-background row">
                        {{> single-rx prescription}}
                    </ul>
                    {{/each}}
                </ol>
            </div>
        </div>
        <div class="twilio-button content-background">
            <button type="click" id="notify-all-btn" class="p2 rx-buttons">Click here to get a text reminder for all your prescriptions!</button>
            <div id="liveAlertPlaceholder" class="twilio-alert"></div>
        </div>
        {{/if}}
    </div>

    <div class="col">
        <div id="add-rx">
            <h2 class="add-rx-title">Add Prescription</h2>
            <form class="new-rx content-background">
                <div>
                    <label for="rx-name" class="form-text">Medication Name</label>
                    <input type="text" id="rx-name" class="form-control" name="rx-name" placeholder="Medication Name and Strength" />
                    
                </div>
                {{!-- <div>
                    <label for="rx-freq">Medication Instructions</label>
                    <input type="text" id="rx-freq" class="form-control" placeholder="Instructions" />
                </div>
                <div>
                    <label for="rx-qty">Medication Quantity</label>
                    <input type="text" id="rx-qty" class="form-control" placeholder="Quantity">
                </div> --}}
                <div>
                    <label for="rx-cost" class="form-text">Medication Cost</label>
                    <input type="text" id="rx-cost" class="form-control" name="rx-cost" placeholder="Cost" />
                    
                </div>
                <div>
                    <label for="fill-date" class="form-text">Medication Fill Date</label>
                    <input type="text" id="fill-date" class="form-control" name="fill-date" placeholder="Date you got your prescription" />
                    
                </div>
                <div>
                    <label for="refill-date" class="form-text">Medication Refill Date</label>
                    <input type="text" id="refill-date" class="form-control" name="refill-date" placeholder="Date to refill prescription">
                
                </div>
                {{!-- <div>
                    <label for="med-diag">Diagnosis</label>
                    <input type="text" id="med-diag" class="form-control" name="med-diag" placeholder="Diagnosis">
                </div> --}}
                <div>
                    <button type="submit" id="add-rx-btn" class="form-control rx-buttons">Add RX</button>
                    <div id="liveAlertPlaceholder" class="date-alert"></div>
                    <div id="liveAlertPlaceholder" class="empty-alert"></div>
                </div>
            </form>
        </div>
    </div>





<script src="/javascript/add-rx.js"></script>
